<script>
    var selectMediasId = [];
    var selectMediasName = {};

    var caracteristicas = $("#caracteristicas").children();
    console.log(caracteristicas)

    caracteristicas.on("click", (event) => {
        var media_clicked = event.currentTarget.firstElementChild;
        hasAttribute(media_clicked) ?
            remove(media_clicked, selectMediasId) :
            add(media_clicked, selectMediasId);
    })

    function remove(clicked, selectArray) {
        removeAttribute(clicked);
        selectArray.splice(selectArray.indexOf(clicked.id), 1);
    }

    function add(clicked, selectArray) {
        addAttribute(clicked);
        selectArray.push(clicked.id);
    }

    function addAttribute(clicked) {
        clicked.setAttribute("style", "border: groove !important; border-color: white !important");
    }

    function removeAttribute(clicked) {
        clicked.removeAttribute("style");
    }

    function hasAttribute(clicked) {
        return clicked.hasAttribute("style");
    }

    function registrarCaracteristicas() {
        console.log(selectMediasId)
        $.ajax({
            type: 'post',
            url: 'http://localhost:3000/caracteristicas',
            data: {
                caracteristicas: selectMediasId,
                userId: JSON.parse(localStorage.currentUser).id
            },
            datatype: "application/json",
            success: function (retorno) {
                alert('Caracteristicas Cadastradas')
                window.location = `/imoveis`
            },
            error: function (retorno) {
                console.log('error', retorno)
            }
        })
    }
</script>

